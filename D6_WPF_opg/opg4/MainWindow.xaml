<Window x:Class="opg4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:opg4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button Click="Button_Click" DockPanel.Dock="Left">
            <Label Content="LEFT"></Label></Button>
        <Button Click="Button_Click_1" DockPanel.Dock="Right">
            <Label Content="RIGHT"></Label>
        </Button>
        <Button Click="Button_Click_2" DockPanel.Dock="Top">
            <Label Content="TOP"></Label>
        </Button>
        <Button Click="Button_Click_3" DockPanel.Dock="Bottom">
            <Label Content="BOTTOM"></Label>
        </Button>
        <TextBlock x:Name="tBlock" HorizontalAlignment="Center"></TextBlock>
    </DockPanel>
</Window>
